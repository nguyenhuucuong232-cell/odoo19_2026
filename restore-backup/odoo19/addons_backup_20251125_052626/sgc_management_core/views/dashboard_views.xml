<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_sgc_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Hợp đồng đã ký</field>
        <field name="res_model">sgc.signed.contract</field>
        <field name="view_mode">kanban,graph,pivot,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Dashboard Hợp đồng đã ký
            </p>
        </field>
    </record>

    <!-- Kanban View for Dashboard -->
    <record id="sgc_contract_kanban_dashboard" model="ir.ui.view">
        <field name="name">sgc.signed.contract.kanban.dashboard</field>
        <field name="model">sgc.signed.contract</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="contract_value"/>
                <field name="state"/>
                <field name="project_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><field name="name"/></div>
                                    <div class="o_secondary"><field name="partner_id"/></div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary" type="object" name="action_confirm_contract">
                                            Xác nhận
                                        </button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <field name="contract_value" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <field name="state" widget="label_selection" 
                                       options="{'classes': {'draft': 'default', 'active': 'success', 'done': 'info'}}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View for Revenue Analysis -->
    <record id="sgc_contract_graph_revenue" model="ir.ui.view">
        <field name="name">sgc.signed.contract.graph.revenue</field>
        <field name="model">sgc.signed.contract</field>
        <field name="arch" type="xml">
            <graph string="Doanh thu theo Dự án" type="bar">
                <field name="partner_id"/>
                <field name="contract_value" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Revenue Analysis -->
    <record id="sgc_contract_pivot_revenue" model="ir.ui.view">
        <field name="name">sgc.signed.contract.pivot.revenue</field>
        <field name="model">sgc.signed.contract</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích Doanh thu">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
                <field name="contract_value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Menu Item for Dashboard -->
    <record id="sgc_menu_dashboard" model="ir.ui.menu">
        <field name="name">Dashboard</field>
        <field name="parent_id" ref="sgc_menu_root"/>
        <field name="action" ref="action_sgc_dashboard"/>
        <field name="sequence">5</field>
    </record>

</odoo>
