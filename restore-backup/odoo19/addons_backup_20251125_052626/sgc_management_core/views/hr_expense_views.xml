<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sgc_hr_expense_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.expense.form.inherit.sgc</field>
        <field name="model">hr.expense</field>
    <!-- inherit the main expense form view id used in hr_expense module -->
    <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="sgc_advance_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>