<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sgc_expense_advance_action" model="ir.actions.act_window">
        <field name="name">Đề nghị Tạm ứng</field>
        <field name="res_model">sgc.expense.advance</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="sgc_expense_advance_view_tree" model="ir.ui.view">
        <field name="name">sgc.expense.advance.view.list</field>
        <field name="model">sgc.expense.advance</field>
        <field name="arch" type="xml">
            <list string="Đề nghị Tạm ứng">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="reason"/>
                <field name="amount"/>
                <field name="project_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="sgc_expense_advance_view_form" model="ir.ui.view">
        <field name="name">sgc.expense.advance.view.form</field>
        <field name="model">sgc.expense.advance</field>
        <field name="arch" type="xml">
            <form string="Đề nghị Tạm ứng">
                <header>
                    <button name="action_submit" string="Gửi Tạm ứng" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_to_draft" string="Gửi lại" type="object"
                            invisible="state != 'refuse'"/>
                    
                    <button name="action_approve_l1" string="Trưởng nhóm Duyệt (L1)" type="object" class="oe_highlight"
                            invisible="state != 'submit'"
                            groups="sgc_management_core.group_sgc_team_leader"/>
                    <button name="action_approve_l2" string="Quản lý Duyệt (L2)" type="object" class="oe_highlight"
                            invisible="state != 'approve_l1'"
                            groups="sgc_management_core.group_sgc_manager"/>
                    
                    <button name="action_paid" string="Đã chi tiền" type="object" class="oe_highlight"
                            invisible="state != 'approved'"
                            groups="sgc_management_core.group_sgc_accountant"/>
                    
                    <button name="action_create_reconciliation" string="Tạo Hoàn ứng" type="object" class="oe_highlight"
                            invisible="state != 'paid'"/>
                    
                    <button name="action_refuse" string="Từ chối" type="object"
                            invisible="state not in ['submit', 'approve_l1']"
                            groups="sgc_management_core.group_sgc_team_leader"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approved,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_reconciliations"
                                class="oe_stat_button" icon="fa-list-alt">
                            <field string="Hoàn ứng" name="expense_sheet_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin Đề nghị">
                            <field name="employee_id"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="reason"/>
                        </group>
                        <group string="Người duyệt">
                            <field name="approver_l1_id" readonly="1"/>
                            <field name="approver_l2_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Liên kết nghiệp vụ">
                            <field name="project_id"/>
                            <field name="contract_id"/>
                        </group>
                        <group string="Thống kê">
                            <field name="expense_sheet_count" widget="statinfo" string="Bảng kê hoàn ứng"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>