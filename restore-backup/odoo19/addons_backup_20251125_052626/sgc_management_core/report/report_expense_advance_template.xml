<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_expense_advance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sgc_management_core.external_layout_sgc">
                    <div class="page">
                        <h2>ĐỀ NGHỊ TẠM ỨNG SGC</h2>

                        <div id="advance_details" class="row mt32">
                            <div class="col-6">
                                <strong>Nhân viên:</strong><br/>
                                <span t-field="doc.employee_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Số tiền Tạm ứng:</strong><br/>
                                <span t-field="doc.amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </div>
                        </div>

                        <div id="advance_reason" class="row mt16">
                            <div class="col-12">
                                <strong>Lý do Tạm ứng:</strong>
                                <p t-field="doc.reason"/>
                            </div>
                        </div>

                        <div id="advance_links" class="row mt16">
                            <div class="col-6">
                                <strong>Dự án liên quan:</strong>
                                <span t-field="doc.project_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Hợp đồng liên quan:</strong>
                                <span t-field="doc.contract_id.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>