<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_sgc_management" model="ir.module.category">
            <field name="name">Nghiệp vụ SGC</field>
            <field name="description">Phân quyền cho Module Nghiệp vụ SGC</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_sgc_user" model="res.groups">
            <field name="name">SGC User (Người dùng)</field>
            <field name="category_id" ref="module_category_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_sgc_team_leader" model="res.groups">
            <field name="name">SGC Team Leader (Cấp 1)</field>
            <field name="category_id" ref="module_category_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_user'))]"/>
        </record>

        <record id="group_sgc_manager" model="res.groups">
            <field name="name">SGC Manager (Quản lý Cấp 2)</field>
            <field name="category_id" ref="module_category_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_team_leader'))]"/>
        </record>

        <record id="group_sgc_accountant" model="res.groups">
            <field name="name">SGC Accountant (Kế toán)</field>
            <field name="category_id" ref="module_category_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_user')), (4, ref('account.group_account_user'))]"/>
        </record>

    </data>
</odoo>