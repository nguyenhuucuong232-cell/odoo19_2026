<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sgc_sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sgc</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button name="action_create_sgc_contract"
                        string="Tạo Hợp đồng SGC"
                        type="object"
                        class="oe_highlight"
                        groups="sgc_management_core.group_sgc_user"
                        invisible="state not in ['sale', 'done']"/>
            </xpath>

        </field>
    </record>
</odoo>