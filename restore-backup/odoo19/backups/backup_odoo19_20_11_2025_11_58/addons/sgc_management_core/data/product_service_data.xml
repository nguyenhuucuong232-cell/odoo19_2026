<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Product Category for SGC Services -->
        <record id="product_category_sgc_service" model="product.category">
            <field name="name">Dịch vụ SGC</field>
        </record>

        <!-- Additional Project Template for GPMT (Giấy phép Môi trường) -->
        <record id="sgc_project_template_gpmt" model="project.project">
            <field name="name">Dự án Mẫu - Giấy phép Môi trường (GPMT)</field>
            <field name="is_template" eval="True"/>
            <field name="type_ids" eval="[(4, ref('sgc_stage_01_new')),(4, ref('sgc_stage_02_survey')), (4, ref('sgc_stage_03_sampling'))]"/>
        </record>

        <!-- Product: Gói Quan trắc Môi trường (QTMT) -->
        <record id="product_service_qtmt_extra" model="product.product">
            <field name="name">Gói Quan trắc Môi trường (QTMT)</field>
            <field name="type">service</field>
            <field name="list_price">5000000</field>
            <field name="standard_price">4000000</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="categ_id" ref="product_category_sgc_service"/>
            <field name="description">Gói dịch vụ Quan trắc môi trường SGC</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="service_tracking">project_only</field>
            <field name="project_template_id" ref="sgc_project_template"/>
        </record>

        <!-- Product: Gói Giấy phép Môi trường (GPMT) -->
        <record id="product_service_gpmt" model="product.product">
            <field name="name">Gói Giấy phép Môi trường (GPMT)</field>
            <field name="type">service</field>
            <field name="list_price">3000000</field>
            <field name="standard_price">2400000</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="categ_id" ref="product_category_sgc_service"/>
            <field name="description">Gói dịch vụ hỗ trợ Giấy phép Môi trường</field>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
            <field name="service_tracking">project_only</field>
            <field name="project_template_id" ref="sgc_project_template_gpmt"/>
        </record>

    </data>
</odoo>
