<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_sgc_management" model="ir.module.category">
            <field name="name">Nghiệp vụ SGC</field>
            <field name="description">Phân quyền cho Module Nghiệp vụ SGC</field>
            <field name="sequence">20</field>
        </record>

        <!-- Tạo privilege cho SGC Management -->
        <record id="privilege_sgc_management" model="res.groups.privilege">
            <field name="name">SGC Management</field>
            <field name="category_id" ref="module_category_sgc_management"/>
        </record>

        <record id="group_sgc_user" model="res.groups">
            <field name="name">SGC User (Người dùng)</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_sgc_team_leader" model="res.groups">
            <field name="name">SGC Team Leader (Cấp 1)</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_user'))]"/>
        </record>

        <record id="group_sgc_manager" model="res.groups">
            <field name="name">SGC Manager (Quản lý Cấp 2)</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_team_leader'))]"/>
        </record>

        <record id="group_sgc_accountant" model="res.groups">
            <field name="name">SGC Accountant (Kế toán)</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_user')), (4, ref('account.group_account_user'))]"/>
        </record>

        <!-- Sales -->
        <record id="group_sgc_sales_staff" model="res.groups">
            <field name="name">Sales - Nhân viên</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="group_sgc_sales_lead" model="res.groups">
            <field name="name">Sales - Trưởng đội</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_sales_staff')), (4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>

        <record id="group_sgc_sales_manager" model="res.groups">
            <field name="name">Sales - Trưởng phòng</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_sales_lead')), (4, ref('sales_team.group_sale_manager'))]"/>
        </record>

        <record id="group_sgc_sales_director" model="res.groups">
            <field name="name">Sales - Giám đốc</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_sales_manager'))]"/>
        </record>

        <!-- Purchase -->
        <record id="group_sgc_purchase_staff" model="res.groups">
            <field name="name">Purchase - Nhân viên</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('purchase.group_purchase_user'))]"/>
        </record>

        <record id="group_sgc_purchase_manager" model="res.groups">
            <field name="name">Purchase - Trưởng phòng</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_purchase_staff')), (4, ref('purchase.group_purchase_manager'))]"/>
        </record>

        <record id="group_sgc_purchase_director" model="res.groups">
            <field name="name">Purchase - Giám đốc</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_purchase_manager'))]"/>
        </record>

        <!-- Technical / Laboratory -->
        <record id="group_sgc_tech_staff" model="res.groups">
            <field name="name">Kỹ thuật/Thí nghiệm - Nhân viên</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('project.group_project_user')), (4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        </record>

        <record id="group_sgc_tech_manager" model="res.groups">
            <field name="name">Kỹ thuật/Thí nghiệm - Trưởng phòng</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_tech_staff')), (4, ref('project.group_project_manager'))]"/>
        </record>

        <record id="group_sgc_tech_director" model="res.groups">
            <field name="name">Kỹ thuật/Thí nghiệm - Giám đốc</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_tech_manager'))]"/>
        </record>

        <!-- Accounting -->
        <record id="group_sgc_account_staff" model="res.groups">
            <field name="name">Kế toán - Nhân viên</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('account.group_account_user'))]"/>
        </record>

        <record id="group_sgc_account_manager" model="res.groups">
            <field name="name">Kế toán - Trưởng phòng</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_account_staff')), (4, ref('account.group_account_manager'))]"/>
        </record>

        <record id="group_sgc_account_director" model="res.groups">
            <field name="name">Kế toán - Giám đốc</field>
            <field name="privilege_id" ref="privilege_sgc_management"/>
            <field name="implied_ids" eval="[(4, ref('group_sgc_account_manager'))]"/>
        </record>

    </data>
</odoo>