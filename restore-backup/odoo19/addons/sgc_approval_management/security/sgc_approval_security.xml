<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_sgc_approval_user" model="res.groups">
        <field name="name">User</field>
    </record>

    <record id="group_sgc_approval_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_sgc_approval_user'))]"/>
    </record>
    
    <!-- Multi-company rules -->
    <record id="sgc_approval_category_comp_rule" model="ir.rule">
        <field name="name">Approval Category Multi Company</field>
        <field name="model_id" ref="model_sgc_approval_category"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="sgc_approval_request_comp_rule" model="ir.rule">
        <field name="name">Approval Request Multi Company</field>
        <field name="model_id" ref="model_sgc_approval_request"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
