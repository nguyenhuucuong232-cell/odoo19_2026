<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================== -->
    <!-- BIÊN BẢN BÀN GIAO TÀI LIỆU VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_handover_minutes_action" model="ir.actions.act_window">
        <field name="name">Biên bản bàn giao tài liệu</field>
        <field name="res_model">sgc.handover.minutes</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_handover_minutes_view_tree" model="ir.ui.view">
        <field name="name">sgc.handover.minutes.view.list</field>
        <field name="model">sgc.handover.minutes</field>
        <field name="arch" type="xml">
            <list string="Biên bản bàn giao tài liệu">
                <field name="name" string="Số biên bản"/>
                <field name="create_date" string="Ngày tạo"/>
                <field name="project_name" string="Dự án"/>
                <field name="contract_id" string="Hợp đồng ký kết"/>
                <field name="receiving_org" string="Cơ quan nhận tài liệu"/>
                <field name="state" string="Trạng thái" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'confirmed'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <record id="sgc_handover_minutes_view_form" model="ir.ui.view">
        <field name="name">sgc.handover.minutes.view.form</field>
        <field name="model">sgc.handover.minutes</field>
        <field name="arch" type="xml">
            <form string="Biên bản bàn giao tài liệu">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_done" string="Hoàn thành" type="object" 
                            class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Hủy" type="object" 
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_draft" string="Đặt về nháp" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Biên bản bàn giao tài liệu"/>
                        <h1>
                            <field name="name" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="project_name"/>
                            <field name="contract_id"/>
                        </group>
                        <group>
                            <field name="receiving_org"/>
                            <field name="handover_form_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="document_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- BIÊN BẢN LẤY MẪU VIEWS -->
    <!-- ============================================== -->
    
