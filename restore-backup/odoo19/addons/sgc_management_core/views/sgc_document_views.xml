                    </div>
                    <group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="contract_id"/>
                            <field name="acceptance_date"/>
                        </group>
                        <group>
                            <field name="acceptor_id"/>
                            <field name="result"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
