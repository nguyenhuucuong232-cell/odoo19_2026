    <!-- ============================================== -->
    <!-- ĐỀ NGHỊ THANH TOÁN VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_payment_request_action" model="ir.actions.act_window">
        <field name="name">Đề nghị thanh toán</field>
        <field name="res_model">sgc.payment.request</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_payment_request_view_tree" model="ir.ui.view">
        <field name="name">sgc.payment.request.view.list</field>
        <field name="model">sgc.payment.request</field>
        <field name="arch" type="xml">
            <list string="Đề nghị thanh toán">
                <field name="name" string="Số đề nghị"/>
                <field name="create_date" string="Ngày tạo"/>
                <field name="contract_id" string="Hợp đồng ký kết"/>
                <field name="partner_id" string="Khách hàng"/>
                <field name="amount" string="Số tiền" widget="monetary"/>
                <field name="due_date" string="Ngày đến hạn"/>
                <field name="state" string="Trạng thái" widget="badge"/>
            </list>
        </field>
    </record>
    
    <record id="sgc_payment_request_view_form" model="ir.ui.view">
        <field name="name">sgc.payment.request.view.form</field>
        <field name="model">sgc.payment.request</field>
        <field name="arch" type="xml">
            <form string="Đề nghị thanh toán">
                <header>
                    <button name="action_submit" string="Gửi duyệt" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Duyệt" type="object" 
                            class="btn-primary" invisible="state != 'submitted'"/>
                    <button name="action_paid" string="Đã thanh toán" type="object" 
                            class="btn-success" invisible="state != 'approved'"/>
                    <button name="action_cancel" string="Hủy" type="object" 
                            invisible="state in ('paid', 'cancelled')"/>
                    <button name="action_draft" string="Đặt về nháp" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Đề nghị thanh toán"/>
                        <h1>
                            <field name="name" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="contract_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_method_id"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>
