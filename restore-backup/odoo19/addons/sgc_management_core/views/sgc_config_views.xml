<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================== -->
    <!-- HÌNH THỨC BÀN GIAO VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_handover_form_action" model="ir.actions.act_window">
        <field name="name">Hình thức bàn giao</field>
        <field name="res_model">sgc.handover.form</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_handover_form_view_tree" model="ir.ui.view">
        <field name="name">sgc.handover.form.view.list</field>
        <field name="model">sgc.handover.form</field>
        <field name="arch" type="xml">
            <list string="Hình thức bàn giao" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- BÀN GIAO TÀI LIỆU CONFIG VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_document_handover_config_action" model="ir.actions.act_window">
        <field name="name">Bàn giao tài liệu</field>
        <field name="res_model">sgc.document.handover.config</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_document_handover_config_view_tree" model="ir.ui.view">
        <field name="name">sgc.document.handover.config.view.list</field>
        <field name="model">sgc.document.handover.config</field>
        <field name="arch" type="xml">
            <list string="Bàn giao tài liệu" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- GIẤY ỦY QUYỀN VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_power_of_attorney_action" model="ir.actions.act_window">
        <field name="name">Giấy ủy quyền</field>
        <field name="res_model">sgc.power.of.attorney</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_power_of_attorney_view_tree" model="ir.ui.view">
        <field name="name">sgc.power.of.attorney.view.list</field>
        <field name="model">sgc.power.of.attorney</field>
        <field name="arch" type="xml">
            <list string="Giấy ủy quyền">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="authorized_person"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <record id="sgc_power_of_attorney_view_form" model="ir.ui.view">
        <field name="name">sgc.power.of.attorney.view.form</field>
        <field name="model">sgc.power.of.attorney</field>
        <field name="arch" type="xml">
            <form string="Giấy ủy quyền">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="authorized_person"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="content"/>
                    </group>
                    <group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- PHƯƠNG THỨC THANH TOÁN VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_payment_method_action" model="ir.actions.act_window">
        <field name="name">Phương thức thanh toán</field>
        <field name="res_model">sgc.payment.method</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_payment_method_view_tree" model="ir.ui.view">
        <field name="name">sgc.payment.method.view.list</field>
        <field name="model">sgc.payment.method</field>
        <field name="arch" type="xml">
            <list string="Phương thức thanh toán" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- LÝ DO QUÁ HẠN HĐ VIEWS -->
    <!-- ============================================== -->
    
    <record id="sgc_overdue_reason_action" model="ir.actions.act_window">
        <field name="name">Lý do quá hạn HĐ</field>
        <field name="res_model">sgc.overdue.reason</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="sgc_overdue_reason_view_tree" model="ir.ui.view">
        <field name="name">sgc.overdue.reason.view.list</field>
        <field name="model">sgc.overdue.reason</field>
        <field name="arch" type="xml">
            <list string="Lý do quá hạn HĐ" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

</odoo>
