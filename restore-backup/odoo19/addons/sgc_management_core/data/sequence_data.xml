<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for SGC Contract -->
        <record id="sequence_sgc_contract" model="ir.sequence">
            <field name="name">SGC Contract Sequence</field>
            <field name="code">sgc.signed.contract</field>
            <field name="prefix">HĐ/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Sequence for Biên bản bàn giao tài liệu -->
        <record id="sequence_sgc_handover_minutes" model="ir.sequence">
            <field name="name">Biên bản bàn giao tài liệu</field>
            <field name="code">sgc.handover.minutes</field>
            <field name="prefix">BGTL</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Sequence for Biên bản lấy mẫu -->
        <record id="sequence_sgc_sampling_minutes" model="ir.sequence">
            <field name="name">Biên bản lấy mẫu</field>
            <field name="code">sgc.sampling.minutes</field>
            <field name="prefix">BBLM</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Sequence for Biên bản nghiệm thu -->
        <record id="sequence_sgc_acceptance_minutes" model="ir.sequence">
            <field name="name">Biên bản nghiệm thu</field>
            <field name="code">sgc.acceptance.minutes</field>
            <field name="prefix">BBNT</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Sequence for Đề nghị thanh toán -->
        <record id="sequence_sgc_payment_request" model="ir.sequence">
            <field name="name">Đề nghị thanh toán</field>
            <field name="code">sgc.payment.request</field>
            <field name="prefix">ĐNTT/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
    </data>
</odoo>
