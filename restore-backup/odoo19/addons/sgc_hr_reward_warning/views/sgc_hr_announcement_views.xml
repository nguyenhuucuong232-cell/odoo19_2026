<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_hr_announcement_view_form" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.form</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <form string="Thông báo">
                <header>
                    <button string="Gửi phê duyệt" 
                            class="btn-primary" 
                            type="object" 
                            name="action_send_for_approval"
                            groups="hr.group_hr_user"
                            invisible="state != 'draft'"/>
                    <button string="Phê duyệt" 
                            class="btn-primary" 
                            groups="hr.group_hr_manager" 
                            type="object" 
                            name="action_approve"
                            invisible="state != 'to_approve'"/>
                    <button string="Từ chối" 
                            groups="hr.group_hr_manager" 
                            type="object"
                            name="action_reject" 
                            invisible="state != 'to_approve'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <div name="options_active">
                            <div>
                                <label for="is_general" class="oe_inline" string="Thông báo chung"/>
                                <field name="is_general" class="oe_inline" readonly="name != False"/>
                            </div>
                        </div>
                    </div>
                    <group>
                        <label for="title"/>
                        <div>
                            <field name="title" readonly="state != 'draft'"/>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="announcement_type" invisible="is_general"/>
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                            <field name="employee_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'employee'"/>
                            <field name="department_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'department'"/>
                            <field name="position_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'job_position'"/>
                            <field name="requested_date" readonly="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="content" string="Nội dung">
                            <field name="content" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sgc_hr_announcement_view_list" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.list</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="title"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" 
                       decoration-warning="state == 'to_approve'" 
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sgc_hr_announcement_view_search" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.search</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <search string="Thông báo">
                <field name="name" string="Mã số"/>
                <field name="title" string="Tiêu đề"/>
                <field name="is_general" string="Thông báo chung"/>
                <field name="state" string="Trạng thái"/>
                <separator/>
                <filter name="approved" string="Đã phê duyệt" domain="[('state', '=', 'approved')]"/>
                <filter name="general" string="Thông báo chung" domain="[('is_general', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sgc_hr_announcement_action" model="ir.actions.act_window">
        <field name="name">Thông báo</field>
        <field name="res_model">sgc.hr.announcement</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="sgc_hr_announcement_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo thông báo mới
            </p>
        </field>
    </record>

