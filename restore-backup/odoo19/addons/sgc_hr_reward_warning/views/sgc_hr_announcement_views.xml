    <!-- Employee Form Inherit -->
    <record model="ir.ui.view" id="sgc_hr_employee_form_inherit">
        <field name="name">hr.employee.form.inherit.sgc.announcement</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" 
                        name="action_view_announcements" 
                        type="object" 
                        icon="fa-bullhorn"
                        invisible="sgc_announcement_count == 0">
                    <field string="Thông báo" name="sgc_announcement_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Cron Job -->
    <record model="ir.cron" id="sgc_hr_announcement_expiry_cron">
        <field name="name">SGC HR Announcement Expiry</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="model_id" ref="model_sgc_hr_announcement"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_expiry()</field>
    </record>
