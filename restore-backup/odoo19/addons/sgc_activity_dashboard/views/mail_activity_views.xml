<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Mail activity form view -->
    <record id="sgc_mail_activity_view_form" model="ir.ui.view">
        <field name="name">mail.activity.view.form.sgc</field>
        <field name="model">mail.activity</field>
        <field name="arch" type="xml">
            <form string="Log an Activity" create="false">
                <header>
                    <field name="id" invisible="1"/>
                    <button invisible="chaining_type == 'trigger' or state == 'done'"
                            string="Đánh dấu hoàn thành" 
                            name="action_done"
                            type="object" 
                            class="btn-secondary" 
                            data-hotkey="w"
                            context="{'mail_activity_quick_update': True}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="planned,today,done"/>
                </header>
                <sheet string="Activity">
                    <group>
                        <group>
                            <field name="activity_type_id" required="1"
                                   readonly="state == 'done'"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="summary" readonly="state == 'done'"
                                   placeholder="e.g. Discuss proposal"/>
                            <field name="active" readonly="state == 'done'"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="chaining_type" invisible="1"/>
                            <field name="res_model" invisible="1"/>
                            <field name="date_deadline" readonly="state == 'done'"/>
                            <field name="sgc_date_deadline" readonly="state == 'done'"
                                   groups="sgc_activity_dashboard.group_sgc_activity_alarm"/>
                            <field name="activity_tag_ids"
                                   readonly="state == 'done'"
                                   widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                            <field name="sgc_activity_alarm_ids" 
                                   widget="many2many_tags"
                                   readonly="state == 'done'"
                                   groups="sgc_activity_dashboard.group_sgc_activity_alarm"/>
                        </group>
                    </group>
                    <field name="note" readonly="state == 'done'"
                           class="oe-bordered-editor"
                           placeholder="Ghi chú..."/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Inherit mail activity tree view to add extra fields -->
    <record id="sgc_mail_activity_view_tree" model="ir.ui.view">
        <field name="name">mail.activity.view.tree.inherit.sgc.activity.dashboard</field>
        <field name="model">mail.activity</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="mail.mail_activity_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='res_name']" position="after">
                <field name="user_id"/>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="activity_tag_ids" widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
    
    <!-- Mail activity Menu -->
    <menuitem id="sgc_mail_activity_menu" 
              name="Activity"
              parent="sgc_activity_menu_root"
              action="mail.mail_activity_action"
              sequence="2"/>
</odoo>
