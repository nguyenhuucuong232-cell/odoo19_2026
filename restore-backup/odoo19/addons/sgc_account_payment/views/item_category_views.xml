<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_item_category_view_form" model="ir.ui.view">
        <field name="name">sgc.item.category.form</field>
        <field name="model">sgc.item.category</field>
        <field name="arch" type="xml">
            <form string="Danh mục khoản mục">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Tên danh mục..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="is_internal"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sgc_item_category_view_list" model="ir.ui.view">
        <field name="name">sgc.item.category.list</field>
        <field name="model">sgc.item.category</field>
        <field name="arch" type="xml">
            <list string="Danh mục khoản mục">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="is_internal"/>
                <field name="item_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sgc_item_category_action" model="ir.actions.act_window">
        <field name="name">Danh mục khoản mục</field>
        <field name="res_model">sgc.item.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo danh mục khoản mục mới
            </p>
        </field>
    </record>
</odoo>
