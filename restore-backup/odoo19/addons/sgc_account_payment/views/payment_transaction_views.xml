<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_payment_transaction_view_form" model="ir.ui.view">
        <field name="name">sgc.payment.transaction.form</field>
        <field name="model">sgc.payment.transaction</field>
        <field name="arch" type="xml">
            <form string="Giao dịch thanh toán">
                <header>
                    <button name="action_post" string="Ghi sổ" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state != 'posted'"/>
                    <button name="action_draft" string="Đặt lại nháp" type="object"
                            invisible="state not in ['posted', 'cancel']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type" readonly="state != 'draft'"/>
                            <field name="partner_id" readonly="state != 'draft'"/>
                            <field name="payment_person_id" readonly="state != 'draft'"/>
                            <field name="payment_person" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="journal_id" readonly="state != 'draft'"/>
                            <field name="partner_bank_id" readonly="state != 'draft'"/>
                            <field name="internal_transfer" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết thanh toán" name="lines">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="item_detail_id"/>
                                    <field name="account_id"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Tổng"/>
                                    <field name="team_id"/>
                                    <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_amount" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Thông tin khác" name="other">
                            <group>
                                <group>
                                    <field name="team_id"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                                <group>
                                    <field name="move_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sgc_payment_transaction_view_list" model="ir.ui.view">
        <field name="name">sgc.payment.transaction.list</field>
        <field name="model">sgc.payment.transaction</field>
        <field name="arch" type="xml">
            <list string="Giao dịch thanh toán" decoration-info="state == 'draft'"
                  decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="payment_type"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <field name="total_amount" sum="Tổng"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'posted'"
                       decoration-danger="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sgc_payment_transaction_view_search" model="ir.ui.view">
        <field name="name">sgc.payment.transaction.search</field>
        <field name="model">sgc.payment.transaction</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm giao dịch">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="journal_id"/>
                <separator/>
                <filter string="Thu" name="inbound" domain="[('payment_type', '=', 'inbound')]"/>
                <filter string="Chi" name="outbound" domain="[('payment_type', '=', 'outbound')]"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã ghi sổ" name="posted" domain="[('state', '=', 'posted')]"/>
                <separator/>
                <group string="Nhóm theo">
                    <filter string="Loại" name="group_type" context="{'group_by': 'payment_type'}"/>
                    <filter string="Đối tác" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Sổ nhật ký" name="group_journal" context="{'group_by': 'journal_id'}"/>
                    <filter string="Ngày" name="group_date" context="{'group_by': 'date:month'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="sgc_payment_transaction_action_inbound" model="ir.actions.act_window">
        <field name="name">Phiếu thu</field>
        <field name="res_model">sgc.payment.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('payment_type', '=', 'inbound')]</field>
        <field name="context">{'default_payment_type': 'inbound'}</field>
    </record>

    <record id="sgc_payment_transaction_action_outbound" model="ir.actions.act_window">
        <field name="name">Phiếu chi</field>
        <field name="res_model">sgc.payment.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('payment_type', '=', 'outbound')]</field>
        <field name="context">{'default_payment_type': 'outbound'}</field>
    </record>

    <record id="sgc_payment_transaction_action_all" model="ir.actions.act_window">
        <field name="name">Tất cả giao dịch</field>
        <field name="res_model">sgc.payment.transaction</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
