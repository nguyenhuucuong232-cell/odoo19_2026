<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_payment_view_form" model="ir.ui.view">
        <field name="name">sgc.payment.form</field>
        <field name="model">sgc.payment</field>
        <field name="arch" type="xml">
            <form string="Thanh toán">
                <header>
                    <button name="action_post" string="Xác nhận" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state not in ['draft']"/>
                    <button name="action_draft" string="Chuyển về nháp" type="object" class="btn-secondary"
                            invisible="state not in ['cancel', 'posted']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="payment_type" widget="radio" 
                                   readonly="state in ['posted', 'cancel'] or name != 'New'"/>
                            <field name="partner_id" readonly="state in ['posted', 'cancel']"/>
                            <field name="internal_transfer" widget="boolean_toggle"/>
                            <field name="total_amount"/>
                            <field name="date" readonly="state in ['posted', 'cancel']"/>
                        </group>
                        <group>
                            <field name="journal_id" readonly="state not in ['draft']"/>
                            <field name="partner_bank_id"
                                   readonly="state in ['posted', 'cancel']"
                                   domain="[('journal_id', '=', journal_id)]"/>
                            <field name="payment_person_id" readonly="state in ['posted']"/>
                            <field name="move_id" readonly="1"/>
                            <field name="description" readonly="state in ['posted']"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết thanh toán">
                            <field name="line_ids" nolabel="1" readonly="state in ['posted']">
                                <list string="Chi tiết" editable="bottom">
                                    <field name="item_detail_id"/>
                                    <field name="account_id"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Tổng"/>
                                    <field name="team_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="sgc_payment_view_tree" model="ir.ui.view">
        <field name="name">sgc.payment.tree</field>
        <field name="model">sgc.payment</field>
        <field name="arch" type="xml">
            <list string="Thanh toán" default_order="create_date DESC">
                <field name="name"/>
                <field name="payment_type"/>
                <field name="partner_id"/>
                <field name="total_amount" class="fw-bolder" sum="Tổng"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="partner_bank_id"/>
                <field name="payment_person_id"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'posted'"
                       decoration-muted="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sgc_payment_view_search" model="ir.ui.view">
        <field name="name">sgc.payment.search</field>
        <field name="model">sgc.payment</field>
        <field name="arch" type="xml">
            <search string="Thanh toán">
                <field name="name"/>
                <field name="payment_type"/>
                <field name="partner_id"/>
                <field name="total_amount"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="state"/>
                <filter name="posted" string="Đã xác nhận" domain="[('state', '=', 'posted')]"/>
                <filter string="Ngày thanh toán" name="date" date="date"/>
                <filter name="inbound" string="Thu"
                        domain="[('payment_type', '=', 'inbound'), ('internal_transfer', '=', False)]"/>
                <filter name="outbound" string="Chi"
                        domain="[('payment_type', '=', 'outbound'), ('internal_transfer', '=', False)]"/>
                <filter name="internal_transfer" string="Chuyển nội bộ"
                        domain="[('internal_transfer', '=', True)]"/>
                <separator/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sgc_payment_action" model="ir.actions.act_window">
        <field name="name">Giao dịch thanh toán</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sgc.payment</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="sgc_payment_view_search"/>
        <field name="context">{'search_default_posted': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo giao dịch thanh toán mới
            </p>
        </field>
    </record>

    <!-- Menu - Under Accounting module -->
    <menuitem name="SGC Thanh toán" id="sgc_payment_menu_accounting"
              parent="account.menu_finance"
              sequence="25"/>
     
    <menuitem name="Giao dịch thanh toán" id="sgc_payment_menu"
              parent="sgc_payment_menu_accounting"
              action="sgc_payment_action" 
              sequence="1"/>
</odoo>
