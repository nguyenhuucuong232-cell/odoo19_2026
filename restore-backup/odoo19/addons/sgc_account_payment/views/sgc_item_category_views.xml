<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_item_category_view_form" model="ir.ui.view">
        <field name="name">sgc.item.category.form</field>
        <field name="model">sgc.item.category</field>
        <field name="arch" type="xml">
            <form string="Danh mục khoản mục">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="is_internal"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="sgc_item_category_view_tree" model="ir.ui.view">
        <field name="name">sgc.item.category.tree</field>
        <field name="model">sgc.item.category</field>
        <field name="arch" type="xml">
            <list string="Danh mục khoản mục" editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="is_internal"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sgc_item_category_action" model="ir.actions.act_window">
        <field name="name">Danh mục khoản mục</field>
        <field name="res_model">sgc.item.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo danh mục khoản mục mới
            </p>
        </field>
    </record>

    <!-- Menu - Under Accounting module -->
    <menuitem name="Cấu hình thanh toán" id="sgc_payment_config_menu"
              parent="sgc_payment_menu_accounting"
              sequence="100"/>
    
    <menuitem name="Danh mục khoản mục" id="sgc_item_category_menu"
              parent="sgc_payment_config_menu"
              action="sgc_item_category_action" 
              sequence="1"/>
</odoo>
