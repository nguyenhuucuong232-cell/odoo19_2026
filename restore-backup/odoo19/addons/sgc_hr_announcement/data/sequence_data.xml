<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for HR Announcement -->
        <record id="seq_sgc_hr_announcement" model="ir.sequence">
            <field name="name">SGC HR Announcement</field>
            <field name="code">sgc.hr.announcement</field>
            <field name="prefix">ANN/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence for General Announcement -->
        <record id="seq_sgc_hr_announcement_general" model="ir.sequence">
            <field name="name">SGC HR Announcement General</field>
            <field name="code">sgc.hr.announcement.general</field>
            <field name="prefix">GEN/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
