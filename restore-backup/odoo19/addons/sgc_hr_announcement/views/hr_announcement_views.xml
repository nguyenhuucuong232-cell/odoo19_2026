<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sgc_hr_announcement_view_form" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.form</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <form string="Thông báo nhân sự">
                <header>
                    <button name="action_submit" string="Gửi duyệt" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Phê duyệt" type="object"
                            class="btn-primary" invisible="state != 'to_approve'"
                            groups="sgc_hr_announcement.group_hr_announcement_manager"/>
                    <button name="action_reject" string="Từ chối" type="object"
                            class="btn-secondary" invisible="state != 'to_approve'"
                            groups="sgc_hr_announcement.group_hr_announcement_manager"/>
                    <button name="action_reset_draft" string="Đặt lại nháp" type="object"
                            invisible="state not in ['rejected', 'expired']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <label for="title"/>
                        <h2>
                            <field name="title" placeholder="Nhập tiêu đề thông báo..."
                                   readonly="state != 'draft'"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="is_general" readonly="state != 'draft'"/>
                            <field name="announcement_type" 
                                   invisible="is_general"
                                   readonly="state != 'draft'"/>
                            <field name="employee_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'employee'"
                                   readonly="state != 'draft'"/>
                            <field name="department_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'department'"
                                   readonly="state != 'draft'"/>
                            <field name="position_ids" widget="many2many_tags"
                                   invisible="is_general or announcement_type != 'job_position'"
                                   readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date_start" readonly="state != 'draft'"/>
                            <field name="date_end" readonly="state != 'draft'"/>
                            <field name="requested_date"/>
                            <!-- Người tạo có thể xem trong chatter, bỏ khỏi form chính để tránh phụ thuộc nếu field bị thay đổi -->
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nội dung" name="content">
                            <field name="content" readonly="state != 'draft'"/>
                        </page>
                        <page string="Đính kèm" name="attachments">
                            <field name="attachment_ids" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sgc_hr_announcement_view_list" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.list</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <list string="Thông báo nhân sự" decoration-info="state == 'draft'"
                  decoration-warning="state == 'to_approve'"
                  decoration-success="state == 'approved'"
                  decoration-muted="state in ['rejected', 'expired']">
                <field name="name"/>
                <field name="title"/>
                <field name="is_general"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'to_approve'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"
                       decoration-muted="state == 'expired'"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sgc_hr_announcement_view_search" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.search</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm thông báo">
                <field name="name"/>
                <field name="title"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Chờ duyệt" name="to_approve" domain="[('state', '=', 'to_approve')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Hết hạn" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="Thông báo chung" name="general" domain="[('is_general', '=', True)]"/>
                <separator/>
                <!-- Nhóm theo trạng thái và ngày -->
                <group>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Ngày bắt đầu" name="group_date" context="{'group_by': 'date_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="sgc_hr_announcement_view_kanban" model="ir.ui.view">
        <field name="name">sgc.hr.announcement.kanban</field>
        <field name="model">sgc.hr.announcement</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="title"/>
                <field name="state"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="is_general"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="is_general" widget="boolean_toggle"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="title"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date_start"/> - <field name="date_end"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="sgc_hr_announcement_action" model="ir.actions.act_window">
        <field name="name">Thông báo nhân sự</field>
        <field name="res_model">sgc.hr.announcement</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_approved': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo thông báo nhân sự mới
            </p>
            <p>
                Quản lý các thông báo cho nhân viên, phòng ban hoặc vị trí công việc.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="sgc_hr_announcement_menu_root"
              name="Thông báo"
              parent="hr.menu_hr_root"
              sequence="50"/>
    
    <menuitem id="sgc_hr_announcement_menu"
              name="Thông báo nhân sự"
              parent="sgc_hr_announcement_menu_root"
              action="sgc_hr_announcement_action"
              sequence="10"/>
</odoo>
