<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Announcement Manager Group -->
        <record id="group_hr_announcement_manager" model="res.groups">
            <field name="name">Quản lý thông báo</field>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="hr_announcement_rule_user" model="ir.rule">
            <field name="name">SGC HR Announcement: User can see own announcements</field>
            <field name="model_id" ref="model_sgc_hr_announcement"/>
            <field name="domain_force">[
                '|',
                ('is_general', '=', True),
                '|',
                ('employee_ids.user_id', '=', user.id),
                '|',
                ('department_ids.member_ids.user_id', '=', user.id),
                ('position_ids.employee_ids.user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_announcement_rule_manager" model="ir.rule">
            <field name="name">SGC HR Announcement: Manager can see all</field>
            <field name="model_id" ref="model_sgc_hr_announcement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_announcement_manager'))]"/>
        </record>
    </data>
</odoo>
