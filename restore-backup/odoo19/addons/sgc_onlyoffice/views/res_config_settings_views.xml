<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_onlyoffice" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sgc.onlyoffice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="OnlyOffice Integration" name="sgc_onlyoffice_settings">
                    <setting id="sgc_onlyoffice_url_setting" string="OnlyOffice Server URL">
                        <field name="sgc_onlyoffice_url" placeholder="https://documentserver.example.com"/>
                        <div class="text-muted">
                            URL của OnlyOffice Document Server
                        </div>
                    </setting>
                    <setting id="sgc_onlyoffice_secret_setting" string="JWT Secret">
                        <field name="sgc_onlyoffice_secret" password="True"/>
                        <div class="text-muted">
                            JWT Secret để xác thực với OnlyOffice (tùy chọn)
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
