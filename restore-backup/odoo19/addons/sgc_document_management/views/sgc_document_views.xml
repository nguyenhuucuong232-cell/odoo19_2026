<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Form View -->
    <record id="sgc_document_view_form" model="ir.ui.view">
        <field name="name">sgc.document.form</field>
        <field name="model">sgc.document</field>
        <field name="arch" type="xml">
            <form string="Văn bản">
                <header>
                    <button name="next_status_action01" 
                            string="Hành động 1" 
                            type="object"
                            class="oe_highlight"
                            invisible="not is_show_1"
                            context="{'button_name': name_1}"/>
                    <button name="next_status_action02" 
                            string="Hành động 2" 
                            type="object"
                            invisible="not is_show_2"
                            context="{'button_name': name_2}"/>
                    <field name="status_id" widget="statusbar" options="{'clickable': '0'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_related_documents" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-file-text-o"
                                invisible="related_document_count == 0">
                            <field name="related_document_count" widget="statinfo" string="Liên quan"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Tiêu đề văn bản"/>
                        </h1>
                        <field name="display_number" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="in_number" invisible="type != 'in'"/>
                            <field name="out_number" invisible="type != 'out'"/>
                            <field name="document_type_id"/>
                            <field name="priority"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="send_partner_id" invisible="type != 'in'"/>
                            <field name="partner_id" invisible="type != 'out'"/>
                            <field name="sign_user_id"/>
                            <field name="signing_date"/>
                            <field name="received_date" invisible="type != 'in'"/>
                            <field name="effective_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Nội dung">
                            <field name="document_summary" placeholder="Tóm tắt nội dung..."/>
                            <field name="document_body" placeholder="Nội dung văn bản..."/>
                        </page>
                        <page string="Xử lý">
                            <group>
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="follower_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Đính kèm">
                            <group>
                                <field name="file" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </page>
                        <page string="Lịch sử">
                            <field name="history_ids" readonly="1">
                                <list string="Lịch sử xử lý">
                                    <field name="date"/>
                                    <field name="user_id"/>
                                    <field name="status_id"/>
                                    <field name="response"/>
                                </list>
                            </field>
                        </page>
                        <page string="Liên quan">
                            <group>
                                <field name="related_document_id"/>
                                <field name="description"/>
                            </group>
                        </page>
                    </notebook>
                    <field name="is_show_1" invisible="1"/>
                    <field name="is_show_2" invisible="1"/>
                    <field name="name_1" invisible="1"/>
                    <field name="name_2" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Document List View - Incoming -->
    <record id="sgc_document_view_list_in" model="ir.ui.view">
        <field name="name">sgc.document.list.in</field>
        <field name="model">sgc.document</field>
        <field name="arch" type="xml">
            <list string="Công văn đến">
                <field name="name" string="Tiêu đề văn bản"/>
                <field name="display_number" string="Số văn bản"/>
                <field name="send_partner_id" string="Người gửi"/>
                <field name="sign_user_id" string="Người ký"/>
                <field name="partner_id" string="Người nhận"/>
                <field name="received_date" string="Ngày nhận"/>
                <field name="document_summary" string="Tóm tắt" widget="html"/>
                <field name="user_process_id" string="Người xử lý"/>
            </list>
        </field>
    </record>

    <!-- Document List View - Outgoing -->
    <record id="sgc_document_view_list_out" model="ir.ui.view">
        <field name="name">sgc.document.list.out</field>
        <field name="model">sgc.document</field>
        <field name="arch" type="xml">
            <list string="Công văn đi">
                <field name="name" string="Tiêu đề văn bản"/>
                <field name="display_number" string="Số văn bản"/>
                <field name="document_type_id" string="Loại văn bản"/>
                <field name="send_partner_id" string="Người gửi"/>
                <field name="sign_user_id" string="Người ký"/>
                <field name="user_process_id" string="Người xử lý"/>
                <field name="received_date" string="Ngày nhận"/>
            </list>
        </field>
    </record>

    <!-- Document Kanban View -->
    <record id="sgc_document_view_kanban" model="ir.ui.view">
        <field name="name">sgc.document.kanban</field>
        <field name="model">sgc.document</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status_id" class="o_kanban_small_column">
                <field name="status_id"/>
                <field name="name"/>
                <field name="type"/>
                <field name="display_number"/>
                <field name="user_ids"/>
                <field name="priority"/>
                <field name="department_id"/>
                <field name="sign_user_id"/>
                <field name="department_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="o_kanban_primary">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="text-muted">
                                    <t t-if="record.display_number.value">
                                        # <field name="display_number"/>
                                    </t>
                                </div>
                                <div class="mt-1">
                                    <t t-if="record.sign_user_id.value">
                                        <span>Người ký: <field name="sign_user_id"/></span>
                                    </t>
                                </div>
                                <div class="mt-1">
                                    <t t-if="record.department_name.value">
                                        <span>Phòng ban: <field name="department_name"/></span>
                                    </t>
                                </div>
                                <div class="mt-1">
                                    <t t-if="record.user_ids.value">
                                        <field name="user_ids" widget="many2many_avatar_user"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Search View -->
    <record id="sgc_document_view_search" model="ir.ui.view">
        <field name="name">sgc.document.search</field>
        <field name="model">sgc.document</field>
        <field name="arch" type="xml">
            <search string="Văn bản">
                <field name="name"/>
                <field name="display_number"/>
                <field name="document_type_id"/>
                <field name="send_partner_id"/>
                <field name="partner_id"/>
                <filter name="incoming" string="Công văn đến" domain="[('type', '=', 'in')]"/>
                <filter name="outgoing" string="Công văn đi" domain="[('type', '=', 'out')]"/>
                <separator/>
                <filter name="my_documents" string="Của tôi" domain="[('user_ids', 'in', uid)]"/>
                <group>
                    <filter name="group_status" string="Trạng thái" context="{'group_by': 'status_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Document Actions -->
    <record id="sgc_document_in_action" model="ir.actions.act_window">
        <field name="name">Công văn đến</field>
        <field name="res_model">sgc.document</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sgc_document_view_list_in"/>
        <field name="domain">[('type', '=', 'in')]</field>
        <field name="context">{'is_in_document': True, 'default_type': 'in', 'search_default_group_status': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo công văn đến mới
            </p>
        </field>
    </record>

    <record id="sgc_document_out_action" model="ir.actions.act_window">
        <field name="name">Công văn đi</field>
        <field name="res_model">sgc.document</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sgc_document_view_list_out"/>
        <field name="domain">[('type', '=', 'out')]</field>
        <field name="context">{'is_out_document': True, 'default_type': 'out', 'search_default_group_status': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo công văn đi mới
            </p>
        </field>
    </record>

    <record id="sgc_document_all_action" model="ir.actions.act_window">
        <field name="name">Tất cả văn bản</field>
        <field name="res_model">sgc.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_group_status': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo văn bản mới
            </p>
        </field>
    </record>
</odoo>
