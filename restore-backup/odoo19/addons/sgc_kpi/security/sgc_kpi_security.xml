<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_sgc_kpi">
        <field name="name">SGC KPI</field>
        <field name="description">Quản lý KPI</field>
    </record>
    
    <record id="group_sgc_kpi_user" model="res.groups">
        <field name="name">User</field>
        <!-- category field omitted for compatibility -->
    </record>

    <record id="group_sgc_kpi_manager" model="res.groups">
        <field name="name">Manager</field>
        <!-- category field omitted for compatibility -->
        <field name="implied_ids" eval="[(4, ref('group_sgc_kpi_user'))]"/>
    </record>
    
    <!-- Multi-company rules -->
    <record id="sgc_kpi_criteria_comp_rule" model="ir.rule">
        <field name="name">KPI Criteria Multi Company</field>
        <field name="model_id" ref="model_sgc_kpi_criteria"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
    </record>
    
    <record id="sgc_kpi_report_comp_rule" model="ir.rule">
        <field name="name">KPI Report Multi Company</field>
        <field name="model_id" ref="model_sgc_kpi_report"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
    </record>
</odoo>
